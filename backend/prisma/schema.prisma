// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  clerkUserId  String  @unique @map("clerk_user_id")
  email        String?
  discordToken String? @map("discord_token")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Server configurations (one per server)
  serverConfigs UserServerConfig[]

  // Web chat conversation groups and conversations
  chatConversationGroups ChatConversationGroup[]
  chatConversations      ChatConversation[]

  // Chat personas for multi-user simulation
  chatPersonas ChatPersona[]

  @@map("users")
}

model Server {
  id        String   @id @default(uuid())
  guildId   String   @unique @map("guild_id")
  guildName String   @map("guild_name")

  websites               ServerWebsite[]
  userConfigs            UserServerConfig[]
  chatConversationGroups ChatConversationGroup[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("servers")
}

model UserServerConfig {
  id       String @id @default(uuid())
  userId   String @map("user_id")
  serverId String @map("server_id")

  botName     String  @default("Assistant") @map("bot_name")
  personality String  @default("") @db.Text
  rules       String  @default("") @db.Text
  information String  @default("") @db.Text
  botActive   Boolean @default(false) @map("bot_active")

  messagesSentCount     Int       @default(0) @map("messages_sent_count")
  messagesReceivedCount Int       @default(0) @map("messages_received_count")
  lastMessageSentAt     DateTime? @map("last_message_sent_at")
  lastMessageReceivedAt DateTime? @map("last_message_received_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  server Server @relation(fields: [serverId], references: [id], onDelete: Cascade)

  @@unique([userId, serverId])
  @@index([userId])
  @@index([serverId])
  @@map("user_server_configs")
}

model ServerWebsite {
  id        String   @id @default(uuid())
  serverId  String   @map("server_id")
  server    Server   @relation(fields: [serverId], references: [id], onDelete: Cascade)

  url       String
  name      String?

  scrapes   WebsiteScrape[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([serverId, url])
  @@map("server_websites")
}

model WebsiteScrape {
  id              String   @id @default(uuid())
  websiteId       String   @map("website_id")
  website         ServerWebsite @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  markdownContent String   @map("markdown_content") @db.Text
  contentLength   Int      @map("content_length")
  truncated       Boolean  @default(false)

  statusCode      Int?     @map("status_code")
  errorMessage    String?  @map("error_message")
  scrapedAt       DateTime @default(now()) @map("scraped_at")

  @@map("website_scrapes")
}

model PendingDiscordToken {
  id              String   @id @default(uuid())
  discordToken    String   @map("discord_token")
  claimCode       String   @unique @map("claim_code")
  expiresAt       DateTime @map("expires_at")
  claimed         Boolean  @default(false)
  claimedByUserId String?  @map("claimed_by_user_id")
  createdAt       DateTime @default(now())

  @@map("pending_discord_tokens")
}

// Group of conversations (1, 3, or 5 panes)
model ChatConversationGroup {
  id            String             @id @default(uuid())
  userId        String             @map("user_id")
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  serverId      String?            @map("server_id")
  server        Server?            @relation(fields: [serverId], references: [id], onDelete: SetNull)
  title         String             @default("New chat")
  paneCount     Int                @map("pane_count") // 1, 3, or 5
  conversations ChatConversation[]
  createdAt     DateTime           @default(now()) @map("created_at")
  updatedAt     DateTime           @updatedAt @map("updated_at")

  @@index([userId, updatedAt(sort: Desc)])
  @@index([serverId])
  @@map("chat_conversation_groups")
}

model ChatConversation {
  id        String                 @id @default(uuid())
  userId    String                 @map("user_id")
  user      User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId   String?                @map("group_id")
  group     ChatConversationGroup? @relation(fields: [groupId], references: [id], onDelete: Cascade)
  paneIndex Int                    @default(0) @map("pane_index") // 0-4, position in group
  title     String                 @default("New conversation")
  messages  ChatMessage[]
  createdAt DateTime               @default(now()) @map("created_at")
  updatedAt DateTime               @updatedAt @map("updated_at")

  @@index([userId, updatedAt(sort: Desc)])
  @@index([groupId, paneIndex])
  @@map("chat_conversations")
}

model ChatMessage {
  id             String           @id @default(uuid())
  conversationId String           @map("conversation_id")
  conversation   ChatConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String           // "user" | "assistant"
  content        String           @db.Text
  senderName     String?          @map("sender_name") // Persona name at time of sending (for user messages)
  createdAt      DateTime         @default(now()) @map("created_at")

  @@index([conversationId, createdAt])
  @@map("chat_messages")
}

// Personas for multi-user chat simulation
model ChatPersona {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  nickname  String
  color     String   // Hex color code for UI display

  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId])
  @@map("chat_personas")
}
