# NeonRain Environment Variables
# Copy this file to .env and fill in the values

# ===================
# Clerk Authentication
# ===================
CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# ===================
# Database
# ===================
# Railway auto-configures this when using PostgreSQL plugin
DATABASE_URL=postgresql://user:password@host:5432/neonrain?schema=public

# ===================
# Service URLs
# ===================
# Set these after deploying to Railway (use your Railway URLs)
NEXT_PUBLIC_BACKEND_URL=https://your-backend.railway.app
BACKEND_URL=https://your-backend.railway.app
GO_SERVICE_URL=https://your-discord-client.railway.app

# ===================
# Internal Security
# ===================
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=your-secure-random-key

# ===================
# Optional
# ===================
HUMA_API_KEY=
