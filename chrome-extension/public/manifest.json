{
  "manifest_version": 3,
  "name": "NeonRain Discord Connector",
  "version": "2.0.0",
  "description": "Capture Discord token for NeonRain AI automation",
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "NeonRain"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://neonrain.humalike.tech/*",
    "https://*.discord.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.discord.com/*"],
      "js": ["discord-content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["discord-injector.js"],
      "matches": ["https://*.discord.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
