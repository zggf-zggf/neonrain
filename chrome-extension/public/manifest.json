{
  "manifest_version": 3,
  "name": "Svelte Chrome Extension",
  "version": "1.0.0",
  "description": "A Chrome extension with Svelte and backend integration",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Open Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.discord.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.discord.com/*"],
      "js": ["discord-content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["discord-injector.js"],
      "matches": ["https://*.discord.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
